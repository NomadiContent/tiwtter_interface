extends layout.pug

block content
  .bounds.app--body
    .app--section--header
      .grid-33
        .app--section--heading
          h2 Timeline
      .grid-33
        .app--section--heading
          h2 Friends
      .grid-33
        .app--section--heading
          h2 Messages
    .grid-33
      .app--section
        ul.app--tweet--list
          for item in tweets
            li= item
    .grid-33
      .app--section
        ul.app--message--list
          for item in friends
            li= item
    .grid-33
      .app--section
        ul.app--message
          for item in messages
            li= item
